@model TesteTecncicoEL.Api.Models.ParametrosLocacaoDto

@using TesteTecnicoEL.Dominio.Veiculos

@{
    ViewData["Title"] = "Selecionar";
}
@{ 
    var veiculo = ViewBag.Veiculo as Veiculo;
}

<h1>Selecionar</h1>

<h4>Simular locação para o veículo @veiculo.Modelo.Marca.Nome @veiculo.Modelo.Nome @veiculo.AnoFabricacao - Placa @veiculo.Placa</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Simular">
            <div asp-validation-summary="ModelOnly" class="text-danger">
                @if(ViewBag.Erro != null)
                {
                    @string.Join("<br />", ViewBag.Erro as string[]);
                }
            </div>
            <div class="form-group">
                <label asp-for="DataInicio" class="control-label"></label>
                <input asp-for="DataInicio" class="form-control" />
                <span asp-validation-for="DataInicio" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="DataFim" class="control-label"></label>
                <input asp-for="DataFim" class="form-control" />
                <span asp-validation-for="DataFim" class="text-danger"></span>
            </div>
            @Html.Hidden(nameof(Model.IdVeiculo), veiculo.Id.ToString())
            @*<div class="form-group">
                <label asp-for="IdVeiculo" class="control-label"></label>
                <input asp-for="IdVeiculo" class="form-control" />
                <span asp-validation-for="IdVeiculo" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="IdUsuario" class="control-label"></label>
                <input asp-for="IdUsuario" class="form-control" />
                <span asp-validation-for="IdUsuario" class="text-danger"></span>
            </div>*@
            <div class="form-group">
                <input type="submit" value="Simular" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index">Back to List</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
