@model TesteTecnicoEL.Dominio.Locacao.Aluguel

@using TesteTecnicoEL.Dominio.Veiculos
@using TesteTecncicoEL.Api.Models 

@{
    ViewData["Title"] = "Selecionar";
}

@{
    var veiculo = Model.Veiculo as Veiculo;
}

<h1>Resultado da Simulação</h1>

@*<h4>ParametrosLocacaoDto</h4>*@
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Confirmacao">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="DataInicio" class="control-label"></label>
                <input asp-for="DataInicio" class="form-control" readonly />
                <span asp-validation-for="DataInicio" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="DataDevolucaoPrevista" class="control-label"></label>
                <input asp-for="DataDevolucaoPrevista" class="form-control" readonly />
                <span asp-validation-for="DataDevolucaoPrevista" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Veiculo" class="control-label"></label>
                <input type="text" class="form-control" value="@veiculo.Modelo.Marca.Nome @veiculo.Modelo.Nome @veiculo.AnoFabricacao - Placa @veiculo.Placa" readonly />
                <span asp-validation-for="Veiculo" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="ValorAluguel" class="control-label"></label>
                <input asp-for="ValorAluguel" class="form-control" readonly />
                <span asp-validation-for="ValorAluguel" class="text-danger"></span>
            </div>
            @Html.Hidden(nameof(Model.IdVeiculo), veiculo.Id.ToString())
            @Html.Hidden(nameof(ParametrosLocacaoDto.DataFim), Model.DataDevolucaoPrevista)
        <div class="form-group">
            <input type="submit" value="Confirma reserva?" class="btn btn-primary" />
            <input type="submit" value="Voltar" class="btn btn-primary" onclick="window.history.back(); return false;" />
        </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index">Back to List</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
