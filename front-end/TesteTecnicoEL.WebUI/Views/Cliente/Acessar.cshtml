@model TesteTecncicoEL.Api.Models.ClienteDto

@{
    ViewData["Title"] = "Acesso";
}

<h1>@ViewData["Title"]</h1>

@*<h4>ClienteDto</h4>*@
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Acessar">
            <div class="text-danger">
                @if (ViewBag.Erro != null)
                {
                    @if (ViewBag.Erro[0] == "UnauthorizedAccessException")
                    {
                        @Html.Raw("Usuário ou senha inválidos.");
                    }
                    else
                    {
                        @Html.Raw(string.Join("<br />", ViewBag.Erro as string[]));
                    }
                }
            </div>
            <div class="form-group">
                <label asp-for="CPF" class="control-label"></label>
                <input asp-for="CPF" class="form-control" />
                <span asp-validation-for="CPF" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Senha" class="control-label"></label>
                <input asp-for="Senha" class="form-control" type="password" />
                <span asp-validation-for="Senha" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Create" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
